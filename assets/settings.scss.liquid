            text-align: left;
            color: $title-color;
            line-height: 1;
            text-shadow: none;
        }
        h3 {
            &, & a {
                font-style: normal;
                text-decoration: none;
                font-weight: $fw-demi;
                margin-bottom: 0;
                text-transform: uppercase;
            }
        }
        h4 {
            margin: 5px;
            text-transform: uppercase;
        }
    }
    .carousel-item:after {
        display: none;
    }
    .slide_discount_text {
        padding-top: 25px;
    }
    .slide_under_discount_text {
        padding: 10px 0 20px;
    }
    .slide_coupon {
        padding: 12px;
        width: 250px;
        text-align: center;
        white-space: nowrap;
        em, span {
            display: block;
        }
        em {
            font-size: 16px;
            margin-bottom: 3px;
        }
        span {
            font-weight: bold;
        }
    }
}



