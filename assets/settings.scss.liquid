    {% endif %}


    {% capture coupon_font_family %}slide_{{ i }}_coupon_font{% endcapture %}
    {% if settings[coupon_font_family] != '' and settings[coupon_font_family] != nil %}
    {% assign coupon_font_family = settings[coupon_font_family] %}
    {% else %}
    {% assign coupon_font_family = _font_default %}
    {% endif %}

    {% capture coupon_font_size %}slide_{{ i }}_coupon_size{% endcapture %}
    {% if settings[coupon_font_size] != '' and settings[coupon_font_size] != nil %}
    {% assign coupon_font_size = settings[coupon_font_size] %}
