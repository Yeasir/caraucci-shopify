    {% assign discount_color = settings[discount_color] %}
    {% else %}
    {% assign discount_color = _sub_color_default %}
    {% endif %}


    {% capture under_discount_font_family %}slide_{{ i }}_under_discount_font{% endcapture %}
    {% if settings[under_discount_font_family] != '' and settings[under_discount_font_family] != nil %}
    {% assign under_discount_font_family = settings[under_discount_font_family] %}
    {% else %}
    {% assign under_discount_font_family = _font_default %}
    {% endif %}

    {% capture under_discount_font_size %}slide_{{ i }}_under_discount_size{% endcapture %}
