{% if settings.instagram_home_enable %}
	{% if settings.instagram_home_style == "style_1" %}
		<div class="instagram clearfix" >
			<h2 class="heading-title"><span>{{ settings.home_image_title }}</span> </h2>
			<p>{{ settings.home_image_subtitle }}</p>
			<div class="instagram-box clearfix">
			{% for i in (1..5) %}
				{% capture enable %}enable_image_{{ i }}{% endcapture %}
				{% capture image %}image_{{ i }}{% endcapture %}
				{% capture img_alt %}image_{{ i }}_alt{% endcapture %}
				{% capture img_title %}image_{{ i }}_title{% endcapture %}
				{% capture link %}image_{{ i }}_link{% endcapture %}
				{% if settings[enable] %}
					<div class="instagram-inner">
						<a href="{{ settings[link] }}" title="{{ settings[img_title] }}">
							<img src="{{ settings[image] | img_url: 'master' }}" alt="{{ settings[img_alt] }}">
						</a>
					</div>
				{% endif %}
			{% endfor %}
			</div>
		</div>
	{% elsif settings.instagram_home_style == "style_2" %}
		<h3 class="heading-title" style="margin-bottom: 20px;">
			<span>{{ settings.home_image_title }}</span>
		</h3>
		<div class="row ">
			<div class="instagram clearfix style-2 " >
				<div class="col-sm-3 no-padding">
					<div class="instagram-inner instagram-inner1 clearfix">
						<a href="{{ settings.image_1_link }}" title="{{ settings.image_1_title }}" target="_blank">
							<img src="{{ settings.image_1 | img_url: 'master' }}" alt="{{ settings.image_1_alt }}">
						</a>
					</div>
					<div class="instagram-inner instagram-inner2 clearfix">
						<a href="{{ settings.image_2_link }}" title="{{ settings.image_2_title }}" target="_blank">
							<img src="{{ settings.image_2 | img_url: 'master' }}" alt="{{ settings.image_2_alt }}">
						</a>
					</div>
				</div>
				<div class="col-sm-6 no-padding">
					<div class="instagram-inner instagram-inner3 clearfix">
						<a href="{{ settings.image_3_link }}" title="{{ settings.image_3_title }}" target="_blank">
							<img src="{{ settings.image_3 | img_url: 'master' }}" alt="{{ settings.image_3_alt }}">
						</a>
					</div>
				</div>
				<div class="col-sm-3 no-padding">
					<div class="instagram-inner instagram-inner4 clearfix">
						<a href="{{ settings.image_4_link }}" title="{{ settings.image_4_title }}" target="_blank">
							<img src="{{ settings.image_4 | img_url: 'master' }}" alt="{{ settings.image_4_alt }}">
						</a>
					</div>
					<div class="instagram-inner instagram-inner5 clearfix">
						<a href="{{ settings.image_5_link }}" title="{{ settings.image_5_title }}" target="_blank">
							<img src="{{ settings.image_5 | img_url: 'master' }}" alt="{{ settings.image_5_alt }}">
						</a>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
{% endif %}