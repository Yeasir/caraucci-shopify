
{% if settings.module_newsletter_enable %}
	{% if settings.module_newsletter_form_action_url != blank %}
		<div id="mc_embed_signup" class="newsletter-subscribe-form">
			<form action="{{ settings.module_newsletter_form_action_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate " target="_blank" novalidate>
			    <div id="mc_embed_signup_scroll">
			    	<div class="form-group form-item">	
			    		<label for="mce-EMAIL">{{ settings.module_newsletter_desc }}</label>		
						<input type="email" value="" name="EMAIL" class="required email form-control form-text" id="mce-EMAIL" placeholder="YOUR EMAIL ADDRESS">
						<input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="form-submit sbtn btn2">
					</div>
					<div class="form-group subscribe">

					</div>
					<div id="mce-responses" class="clear">
						<div class="response" id="mce-error-response" style="display:none"></div>
						<div class="response" id="mce-success-response" style="display:none"></div>
					</div>    
					<!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
					<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_5e26e023fc1468e786ec4205d_7a6046f369" tabindex="-1" value=""></div>
			    </div>
			</form>
		</div>
		<script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
		<script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
		<!--End mc_embed_signup-->
	{% else %}
		<p>Please enter the mailchimp form action URL in the Module Newsletter in <a href="/admin/themes/{{ theme.id }}/editor">Admin editor</a>.</p>
	{% endif %}
{% endif %}