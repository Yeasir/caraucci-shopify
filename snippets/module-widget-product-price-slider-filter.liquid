{% if settings.module_product_sidebar_enable_slider_filter %}
<div class="widget clearfix widget-product-filter product-filter-color">
    <div class="widget-inner">
        <h3 class="widget-title">
            <span>{{ settings.module_product_sidebar_title_slider_filter }}</span>
        </h3>
        <div class="widget-content clearfix">
            <p>				
				<input type="text" id="amount" readonly style="border:0;">
			</p>
 
			<div id="price-slider"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
	var productPriceFilterMin = parseInt({{ settings.module_product_sidebar_min_value }});
	var productPriceFilterMax = parseInt({{ settings.module_product_sidebar_max_value }});
</script>
{% endif %}