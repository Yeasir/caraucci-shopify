<footer id="is-footer-copyright-group">
	<div id="footer" class="footer container">
		<div class="row">
			<div class=" col-sm-6 col-md-4 copyright">
				<aside class="widget clearfix widget_nav_menu">
					<div class="widget-inner">
						<p><a href="/" class="logo-wrapper" itemprop="url">
							<img src="{{ settings.footer_logo | img_url: 'master' }}" alt="{{ shop.name }}" itemprop="logo">
						</a></p>

					</div>
				</aside>
			</div>
			<div class=" col-sm-6 col-md-8 menu-footer">
				<div class="row">
					<div class="col-md-4 col-md-push-4">
						<aside class="widget clearfix widget_nav_menu">
							<div class="widget-inner">
								{% include "module-single-menu" with settings.footer_menu_1 %}
							</div>
						</aside>
					</div>
					<div class="col-md-4 col-md-pull-4">
						<aside class="widget clearfix widget_nav_menu">
							<div class="widget-inner">
								{% include "module-single-menu" with settings.footer_menu_2 %}
							</div>
						</aside>
					</div>
				</div>

				<div class="clearfix visible-sm"></div>
				<hr class="footer_separator visible-sm" />
				<div class="menu-footer">
					<aside class="widget clearfix widget_nav_menu">
						<div class="widget-inner text-center">
							<div class="social-icons">
								{% include "module-social-account-template" %}
							</div>

							<div class="footer-header">
								<div id="newsletter" >
									{% include "module-newsletter-template" %}
								</div>
							</div>

							<p class="footer-copy">{{ settings.footer_copyright_text }}</p>

						</div>
					</aside>
				</div>

			</div>
		</div>
	</div> <!-- End .is-footer -->
	
</footer> <!-- End .is-footer-copyright-group -->