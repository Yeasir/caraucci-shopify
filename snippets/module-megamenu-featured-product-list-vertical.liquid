{% capture selected_product_column_width %}megamenu_featured_product_{{ megamenu_number }}_column{% endcapture %}
{% capture featured_product_title %}megamenu_featured_product_title_{{ megamenu_number }}{% endcapture %}

<div class="mega-col-nav {{ settings[selected_product_column_width] }}">
	<div class="mega-inner">
		<div class="is-module module">
			<div class="collection-responsive">
				<h3>{{ settings[featured_product_title] }}</h3>
				<ul class="product_list_widget">
					{% for product_number in (1..3) %}
						{% capture selected_product %}megamenu_featured_product_{{ megamenu_number }}_{{ product_number }}{% endcapture %}
						{% capture enable_selected_product_image %}megamenu_collection_image_{{ megamenu_number }}_{{ product_number }}{% endcapture %}
						{% capture selected_product_image %}megamenu_featured_product_image_{{ megamenu_number }}_{{ product_number }}.png{% endcapture %}
						
						{% assign product = all_products[settings[selected_product]] %}

						{% if settings[enable_selected_product_image] %}{% assign custom_image = selected_product_image %}{% endif %}

						{% include "product-archive-vertical-item" %}

						{% assign custom_image = nil %}
					{% endfor %}				
				</ul>
			</div>
		</div>
	</div>
</div>