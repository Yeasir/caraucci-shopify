<!-- {{ product.type }} -->

{% capture size_chart_desktop %}size_chart_desktop_img{% endcapture %}
{% capture size_chart_mobile %}size_chart_mobile_img{% endcapture %}

<div class="modal fade" id="sizeChartModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document"> <div class="modal-content">
            <div class="modal-header text-center">
                <h2 class="modal-title">Size Chart</h2>
            </div>
            <div class="size_chart_wrapper">
                <div class="size_chart">


                    {% if product.type == 'Clothing' %}
                        <div class="hidden-xs">
                            <!--Desktop and Tablet -->
                            <img class="img-responsive" src="{{ settings[size_chart_desktop] | img_url: 'master' }}" alt="{{ settings[size_chart_desktop].alt }}" title="Size Chart">
                        </div>

                        <div class="visible-xs">
                            <!--Vertical Mobile Phone Breakpoint XS -->
                            <img class="img-responsive" src="{{ settings[size_chart_mobile] | img_url: 'master' }}" alt="{{ settings[size_chart_mobile].alt }}" title="Size Chart">
                        </div>

                    {% endif %}

                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn collection-btn-inverse" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>